@model MagicVilla_Web.Models.Dto.LoginRequestDto


<form method="post">
    @*    <div asp-validation-summary="All" class="text-danger"></div>
    *@

    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username.." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password.." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" value="submit" class="form-control btn-success">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}